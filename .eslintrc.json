{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "plugins": [
        "hackmud2"
    ],
    "extends": "plugin:hackmud2/recommended",
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}